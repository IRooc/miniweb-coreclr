{
	// See http://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "cmd",
	"isShellCommand": true,
    "args": ["/C"],
	"showOutput": "always",	
    "echoCommand": true,
    "suppressTaskName": true,
	"tasks": [
		{
			"taskName": "build",
			"args": ["build.bat"],
			"isBuildCommand": true,
			"problemMatcher": "$msCompile"
		},
        {
			"taskName": "typescript",
			"args": ["typescript.bat"],
			"problemMatcher": "$tsc"
        }
	]
}